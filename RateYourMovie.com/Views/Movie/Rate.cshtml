@model RateYourMovie.Models.UserComment

<form method="post">
    <div class="border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class="text-primary">Add comment</h2>
            <hr />
        </div>
         <div class="mb-3">
            <input type="hidden" asp-for="UserId" class="form-control mt-1" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input type="hidden" asp-for="MovieId" class="form-control mt-1" />
            <span asp-validation-for="MovieId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="NumberOfStars"></label>
            <select asp-for="NumberOfStars" class="form-control" aria-required="true">
                    <option value="">Choose rating</option>
                    <option value=1>0.5</option>
                    <option value=2>1</option>
                    <option value=3>1.5</option>
                    <option value=4>2</option>
                    <option value=5>2.5</option>
                    <option value=6>3</option>
                    <option value=7>3.5</option>
                    <option value=8>4</option>
                    <option value=9>4.5</option>
                    <option value=10>5</option>

            </select>                
        </div>
        <div class="mb-3">
            <label asp-for="Comment"></label>
            <input asp-for="Comment" class="form-control mt-1" />
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary me-sm-3" style="background-color:#aeb9da; color: #f0f5fa;width:150px">Sumbit</button>
        <a asp-controller="Movie" asp-action="Index" class="btn" style="width: 150px">Back</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}