@model RateYourMovie.Models.Movie

<form method="post">
    <div class="border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class="text-primary">Add Movie</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control mt-1" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DirectorName"></label>
            <input asp-for="DirectorName" class="form-control mt-1" />
            <span asp-validation-for="DirectorName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ReleaseYear"></label>
            <input asp-for="ReleaseYear" class="form-control mt-1" />
            <span asp-validation-for="ReleaseYear" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PosterUrl"></label>
            <input asp-for="PosterUrl" class="form-control mt-1" />
            <span asp-validation-for="PosterUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control mt-1 input-group-lg" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary me-sm-3" style="background-color:#aeb9da; color: #f0f5fa;width:150px">Add</button>
        <a asp-controller="Movie" asp-action="Index" class="btn" style="width: 150px">Back</a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}

